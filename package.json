{
  "name": "liveseo-relatorios",
  "version": "1.0.0",
  "description": "liveSEO - Sistema de Relatórios de análise de resultados",
  "author": "liveSEO",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:clean": "node -e \"var fs=require('fs'); try { fs.rmSync('release',{recursive:true,force:true}); } catch(e) { console.error('\\nFeche o liveSEO Relatórios e tente novamente: npm run electron:build\\n'); process.exit(1); }\"",
    "prepare-installer": "node build/generate-sidebar.cjs && node build/generate-header.cjs",
    "electron:build": "npm run prepare-installer && npm run build && npm run electron:clean && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build:new": "npm run prepare-installer && npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder.release-new.json"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-datepicker": "^4.25.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-datepicker": "^4.19.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.liveseo.relatorios",
    "productName": "Relatórios liveSEO",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "icon": "build/icon.png",
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp",
      "shortcutName": "Relatórios liveSEO",
      "language": "1046"
    }
  }
}
