  "productName": "Relatórios LiveSEO",
  "directories": {
    "output": "release-new"
  },
  "icon": "build/icon.png",
  "files": ["dist/**/*", "electron/**/*"],
  "win": {
    "target": "nsis",
    "signAndEditExecutable": false,
    "icon": "build/icon.png"
